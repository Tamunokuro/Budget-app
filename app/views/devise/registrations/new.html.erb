<div class= "container-fuild">
  <div class= "col-md-12">
    <div class="d-flex align-items-center py-5">
      <div class="container">
       <div class="row">
        <div class="col-12 col-lg-6 mx-auto">
        <h2 class="text-center font-weight-bold">SIGN UP</h2>
          <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), class: "user-account-form p-4") do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field">
              <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
            </div>

            <div class="field">
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>

            <div class="field">
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>

            <div class="field">
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>

                  <div class="actions">
                    <%= f.submit "Sign up", class: "btn btn-primary w-100" %>
                  </div>
                <% end %>
                <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
